<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EasyHintView">
        <attr name="text" format="string"/>
        <attr name="textHint" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="rightDrawable" format="reference"/>
        <attr name="rightDrawablePadding" format="dimension"/>
        <attr name="singleLine" format="boolean"/>
        <attr name="gravity" >
            <enum name="start" value="0" />
            <enum name="end" value="1" />
        </attr>
        <attr name="orientation">
            <enum name="horizontal">0</enum>
            <enum name="vertical">1</enum>
        </attr>
        <attr name="space" format="dimension"/>

        <attr name="leftHint" format="string"/>
        <attr name="leftDrawable" format="reference"/>
        <attr name="leftDrawablePadding" format="dimension"/>
        <attr name="leftEms" format="integer"/>
        <attr name="leftSize" format="dimension"/>
        <attr name="leftColor" format="color"/>
        <attr name="leftGravity" >
            <enum name="start" value="0" />
            <enum name="end" value="1" />
        </attr>
        <attr name="autoHide" format="boolean"/>
    </declare-styleable>
</resources>