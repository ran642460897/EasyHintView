<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EasyHintView">
        <attr name="text" format="string"/>
        <attr name="textHint" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="textDrawable" format="reference"/>
        <attr name="textDrawablePadding" format="dimension"/>
        <attr name="textLineSpacingExtra" format="dimension"/>
        <attr name="singleLine" format="boolean"/>
        <attr name="gravity" >
            <enum name="start" value="0" />
            <enum name="end" value="1" />
        </attr>
        <attr name="space" format="dimension"/>

        <attr name="hint" format="string"/>
        <attr name="hintDrawable" format="reference"/>
        <attr name="hintDrawablePadding" format="dimension"/>
        <attr name="hintEms" format="integer"/>
        <attr name="hintSize" format="dimension"/>
        <attr name="hintColor" format="color"/>
        <attr name="hintGravity" >
            <enum name="start" value="0" />
            <enum name="end" value="1" />
        </attr>
        <attr name="autoHide" format="boolean"/>
    </declare-styleable>
</resources>